Subject: [PATCH 1/2] feat: add `-F` and some clap options.

---
 src/args.rs             | 3 +++
 src/ig/search_config.rs | 7 +++++++
 src/ig/searcher.rs      | 1 +
 src/main.rs             | 1 +
 4 files changed, 12 insertions(+)

diff --git a/src/args.rs b/src/args.rs
index 32fb038..ad7e390 100644
--- a/src/args.rs
+++ b/src/args.rs
@@ -49,6 +49,9 @@ pub struct Args {
     /// Only show matches surrounded by word boundaries.
     #[clap(short = 'w', long = "word-regexp")]
     pub word_regexp: bool,
+    /// Exact matches with no regex. Useful when search for a string full of delimiters.
+    #[clap(short = 'F', long = "fixed-strings")]
+    pub fixed_strings: bool,
     /// Include files and directories for searching that match the given glob.
     /// Multiple globs may be provided.
     #[clap(short, long)]
diff --git a/src/ig/search_config.rs b/src/ig/search_config.rs
index 983e35d..b6b1df8 100644
--- a/src/ig/search_config.rs
+++ b/src/ig/search_config.rs
@@ -31,6 +31,7 @@ pub struct SearchConfig {
     pub follow_links: bool,
     pub word_regexp: bool,
     pub sort_by: Option<SortKey>,
+    pub fixed_strings: bool,
 }
 
 impl SearchConfig {
@@ -49,6 +50,7 @@ impl SearchConfig {
             search_hidden: false,
             follow_links: false,
             word_regexp: false,
+            fixed_strings: false,
             sort_by: None,
         })
     }
@@ -127,4 +129,9 @@ impl SearchConfig {
         self.word_regexp = word_regexp;
         self
     }
+
+    pub fn fixed_strings(mut self, fixed_strings: bool) -> Self {
+        self.fixed_strings = fixed_strings;
+        self
+    }
 }
diff --git a/src/ig/searcher.rs b/src/ig/searcher.rs
index ffb2d2d..89e4cff 100644
--- a/src/ig/searcher.rs
+++ b/src/ig/searcher.rs
@@ -52,6 +52,7 @@ fn run(path: &Path, config: SearchConfig, tx: mpsc::Sender<Event>) {
         .case_insensitive(config.case_insensitive)
         .case_smart(config.case_smart)
         .word(config.word_regexp)
+        .fixed_strings(config.fixed_strings)
         .build(&config.pattern)
         .expect("Cannot build RegexMatcher");
 
diff --git a/src/main.rs b/src/main.rs
index 3ab6527..5d814f9 100644
--- a/src/main.rs
+++ b/src/main.rs
@@ -41,6 +41,7 @@ fn main() -> Result<()> {
         .search_hidden(args.search_hidden)
         .follow_links(args.follow_links)
         .word_regexp(args.word_regexp)
+        .fixed_strings(args.fixed_strings)
         .globs(args.glob)?
         .file_types(args.type_matching, args.type_not)?
         .sort_by(args.sort_by, args.sort_by_reverse)?;
